extends layout.pug

block prepend header
  -var modalTitle = "Sign in to Twitter"
  -var modalId = "modal-2"
  -var action = "/login"

block content
  input(type="email" name="email" placeholder="Email" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 mb-4")
  input(type="password" name="password" placeholder="Password" class="w-full border-2 border-gray-300 rounded-lg px-4 py-2 mb-4")
  div(class="flex justify-between items-center")
    a(id="forgot-password" class="text-blue-500 hover:text-blue-700 cursor-pointer") Forgot password?
    button(type="submit" class="bg-blue-500 text-white font-bold rounded-full px-4 py-2") Log in
  script.
    const forgotBtn = document.querySelector('#forgot-password')
    forgotBtn.addEventListener('click', (e) => {
      e.preventDefault()
      MicroModal.close('modal-2');
      MicroModal.show('modal-3')
    })
