extends layouts/main.pug
include ./mixins/tweet.pug
block content
  main(class="flex grow")
    div(class="w-[990px] flex")
      div(class="w-[600px] border-x border-x-gray-100")
        div(class="sticky top-0 h-14 backdrop-blur-md bg-white bg-opacity-80 z-10 flex items-center px-4")
          h1(class="text-xl font-bold") Home
        div(class="flex border-b border-b-gray-100 py-6 px-4")
          img( class="w-12 h-12 rounded-full object-cover" src="https://pbs.twimg.com/profile_images/1412798574161797132/4ZCwA8w-_normal.jpg" alt="")
          form(class="flex flex-col w-full" action="/tweet/add" method="POST")
            textarea(name="content" for="content" class="w-full content" placeholder="What's happening?")
            div(class="flex items-center justify-between")
              div
                div(class="flex items-center text-blue-400")
                  +Media
              button(type="submit" class="bg-blue-500 text-white font-bold rounded-full px-4 py-2") Tweet
        each tweet in tweets
          +tweet(tweet._id, tweet.content, tweet.retweets, tweet.likes, tweet.author)

      div(class="w-[350px]")
        input(type="text" placeholder="Search Twitter")
