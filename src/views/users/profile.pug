extends ../layouts/main.pug
include ../mixins/tweet.pug
block content
  main(class="flex grow")
    div(class="w-[990px] flex")
      div(class="w-[600px] border-x border-x-gray-100")
        div(class="sticky top-0 h-14 backdrop-blur-md bg-white bg-opacity-80 z-10 px-4")
          h1(class="text-xl font-bold")= user.name
          p(class="text-xs text-gray-600")= user.tweets.length + " Tweets"
        img(src="https://pbs.twimg.com/profile_banners/106276044/1497628279/1500x500", alt="")
        div(class="flex justify-between px-4")
          div(class="w-36 relative overflow-hidden rounded-full -top-16")
            img(src="https://pbs.twimg.com/profile_images/1412798574161797132/4ZCwA8w-_400x400.jpg", alt="")
          a(href="#" class="self-start text-black font-bold rounded-full px-4 py-2 border border-gray-300 mt-4") Edit profile
        div
          h1(class="text-xl font-bold")= user.name
          p(class="text-xs text-gray-600")= user.username
          p(class="text-xs text-gray-600")= user.description

      div(class="w-[350px]")
        input(type="text" placeholder="Search Twitter")
