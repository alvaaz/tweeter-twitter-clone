    "@types/express-session": "^1.17.3",
    "@types/fs-extra": "^9.0.13",
    "@types/micromodal": "^0.3.3",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.11.5",
    "@types/nodemailer": "^6.4.5",
    "@types/passport": "^1.0.9",
